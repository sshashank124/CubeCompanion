<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.qbix.cubecompanion.HelpHelpPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_0.5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_navigation_drawer"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="@dimen/spacing_0.75"
        android:background="@color/light_blue"/>

    <ExpandableListView
        android:id="@+id/help_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_0.5"/>

</LinearLayout>